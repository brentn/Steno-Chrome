{
  "manifest_version": 2,
  "name": "StenoKeyboard",
  "short_name": "StenoKeyboard",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "background": {
    "scripts": [
      "chord.js", 
      "dictionary.js", 
      "translator.js", 
      "input.js", 
      "output.js", 
      "main.js"]
  },

  "permissions": [
    "input"
  ],
  
  "input_components": [
    {
      "name": "Steno Keyboard",
      "type": "ime",
      "id": "plover",
      "description": "Chorded input",  
      "language": "en-US"
    }
  ]
}
